                onClick={() => scrollToSection('contact')}
                className="bg-rose-500 hover:bg-rose-600 text-white px-5 py-2 rounded-full text-sm font-medium transition-all shadow-lg hover:shadow-rose-200 transform hover:-translate-y-0.5"
