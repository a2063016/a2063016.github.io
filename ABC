                const ids = ['about', 'rooms', 'services', 'food', 'contact'];
                return (
                  <button 
                    key={index}
                    onClick={() => scrollToSection(ids[index])}
                    className={`text-sm font-medium hover:text-rose-500 transition-colors ${scrolled ? 'text-stone-600' : 'text-stone-600 lg:text-white/90 lg:hover:text-white'}`}
                  >
                    {item}
                  </button>
                );
